                                            <div class="pro  ">
                                                <img src="@strImge" alt="@item.TENCF" class="pro_image">

                                                <div class="pro_info">
                                                    <h6 style="margin-top: 25px;">
                                                        <a href="@Url.Action("details","coffees",new { @id = item.MACF })">@item.TENCF</a>
                                                    </h6>
                                                    <div class="pro_info_price">
                                                        <h6 style="margin: 0px; font-size:20px;">
                                                            <b> @item.GIA đ</b>
                                                        </h6>
                                                    </div>

                                                </div>


                                                @if (@item.SOLUONG > 0)
                                                {
                                                    <div class="pull-right">
                                                        <div class="DatMua">
                                                            @*<a class="btn btn-success btn_Buy " style="display: block; margin-top: 55px; padding-top: 7px; background-color: #271010; " href="@Url.Action("AddSP", "ShoppingCard",
                                                                new {  @maSP = item.MACF,@maGH=1 , @strURL = Request.Url.ToString() })">Thêm vào giỏ hàng</a>*@
                                                            @if (Session["MaGH"] == null)
                                                            {
                                                                <div class="product-action" id="addToCard" onclick="alert('Xin lỗi quý khách, quý khách chưa đăng nhập')">
                                                                    <a class="btn btn-success"
                                                                       style="display: block; margin-top: 55px; padding-top: 7px;">
                                                                        <span>Thêm giỏ hàng</span>
                                                                    </a>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div onclick="alert('Đã thêm sản phẩm vòa giỏ hàng')">
                                                                    <a href="@Url.Action("AddSP", "ShoppingCard", new {  @maSP = item.MACF,@strURL = Request.Url.ToString() })">
                                                                        <a class="btn btn-success"
                                                                           style="display: block; margin-top: 55px; padding-top: 7px; ">
                                                                            <span>Thêm giỏ hàng</span>
