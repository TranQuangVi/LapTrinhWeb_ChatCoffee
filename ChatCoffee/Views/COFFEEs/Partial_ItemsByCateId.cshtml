@model IEnumerable<ChatCoffee.Models.ModelsDefault.COFFEE>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImge = "";
        var img = item.ANHs.Where(c => c.MACF == item.MACF).FirstOrDefault();
        if (img != null)
        {

            strImge = img.LINKANH;
        }
        <div class="col-lg-3 pro-item ">
            <div class="pro  " style="width: 190px; height: 280px; margin-top: -30px;">
                <a href="@Url.Action("details","coffees",new { @id = item.MACF })">
                    <img src="@strImge" alt="@item.TENCF" class="pro_image" style="margin-left:0; margin-top:0;">
                    </a>
                    <div class="pro_info">
                        <h6 style="margin-top: 25px;">
                            <a href="@Url.Action("details","coffees",new { @id = item.MACF })">@item.TENCF</a>
                        </h6>
                        <div class="pro_info_price">
                            <h6 style="margin: 0px; font-size:20px;">
                                <b>@String.Format("{0:0,0}", @item.GIA) <span class="woocommerce-Price-currencySymbol" style="font-size: .95em; vertical-align: top; margin-top: 0.05em ;">₫</span></b>
                            </h6>
                        </div>

                    </div>

                    @if (@item.SOLUONG > 0)
                    {
                        <div class="pull-right">
                            <div class="DatMua">
                                @*<a class="btn btn-success btn_Buy " style="display: block; margin-top: 55px; padding-top: 7px; background-color: #271010; " href="@Url.Action("AddSP", "ShoppingCard",
                        new {  @maSP = item.MACF,@maGH=1 , @strURL = Request.Url.ToString() })">Thêm vào giỏ hàng</a>*@
                                @if (Session["MaGH"] == null)
                                {
                                    <div onclick="alert('Xin lỗi quý khách, quý khách chưa đăng nhập')">
                                        <a style=" text-align: -webkit-center">
                                            <button class="btn btn-success"
                                                    style="display: block; margin-top: 40px; padding-top: 7px;">
                                                <span>Thêm giỏ hàng</span>
                                            </button>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div onclick="alert('Đã thêm sản phẩm vòa giỏ hàng')">
                                        <a href="@Url.Action("AddSP", "ShoppingCard",  new {  @maSP = item.MACF,@strURL = Request.Url.ToString() })"
                                           style=" text-align: -webkit-center">
                                            <button class="btn btn-success"
                                                    style="display: block; margin-top: 40px; padding-top: 7px;">
                                                <span>Thêm giỏ hàng</span>
                                            </button>
                                        </a>

                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <p style="margin-top: 50px; font-size: 18px; text-align:center"><a>Hết hàng </a></p>
                    }

            </div>
        </div>
    }
}





