
@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Chỉnh sửa Quyền";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i> </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Role" class="nav-link">Danh sách Quyền</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Role/Create" class="nav-link">Chỉnh sửa Quyền</a>
        </li>
    </ul>
}
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Chỉnh sửa Quyền </h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label>Tên quyền</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            }
        </div>
        <div class="card-footer">

        </div>
    </div>

</section>
