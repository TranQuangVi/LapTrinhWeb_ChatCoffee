@model IEnumerable<ChatCoffee.Models.ModelsDefault.THANHTOAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i> </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/ManagePayment" class="nav-link">Danh sách hình thức thanh toán</a>
        </li>
    </ul>
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Hình thức Thanh Toán   </h3>

            <div class="card-tools">
                <a href="/admin/ManagePayment/Create" class="btn btn-success">Thêm mới</a>

            </div>

        </div>
        <div class="card-body">
            <table class="table table-bordered">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <thead>
                        <tr>

                            <th> Mã Thanh Toán  </th>
                            <th> Phương Thức  </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td> @item.MATT </td>
                                    <td> @item.PHUONGTHUC </td>

                                    <td>
                                        <a href="/admin/ManagePayment/edit/@item.MATT" class="btn btn-success">Sửa</a>
                                        <a href="/admin/ManagePayment/delete/@item.PHUONGTHUC" class="btn btn-danger">Xóa</a>


                                    </td>


                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                }

            </table>

        </div>
        <div class="card-footer">


        </div>

    </div>


</section>
