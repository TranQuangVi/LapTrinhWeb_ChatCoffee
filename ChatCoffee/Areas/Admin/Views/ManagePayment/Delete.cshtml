@model ChatCoffee.Models.ModelsDefault.THANHTOAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Xóa Hình Thức Thanh Toán    </h3>


        </div>
        <div class="card-body">
            @using (Html.BeginForm("Delete", "ManagePayment", FormMethod.Post))
            {

                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.PHUONGTHUC)
                @Html.HiddenFor(x => x.MATT)



                <div class="form-group">
                    <label>Mã Thanh Toán</label>
                    @Html.TextBoxFor(x => x.MATT, new { @class = "form-control" })
                    <label>Hình Thức Thanh Toán  </label>
                    @Html.TextBoxFor(x => x.PHUONGTHUC, new { @class = "form-control" })




                </div>

                <div class="form-group">
                    @*<button type="submit" class="btn btn-success">Delete</button>*@
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            }

        </div>
        <div class="card-footer">


        </div>

    </div>


</section>