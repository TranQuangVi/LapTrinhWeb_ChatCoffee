@model IEnumerable<ChatCoffee.Models.ModelsDefault.COFFEE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Quản lý sản phẩm </h3>
            <div class="card-tools">
                <a href="/Admin/ManageCoffees/create" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <thead>
                        <tr>
                            <th>

                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LOAISANPHAM.TENLOAI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.THUONGHIEU.TENTH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TENCF)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GIA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SOLUONG)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ViewCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SLDABAN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KHOILUONG)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.XUATXU)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HSD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DANGCF)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MOTA)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.ANHs.Where(c=>c.MACF==item.MACF).FirstOrDefault().LINKANH)" 
                                             style="width:50px;height:50px"/>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAISANPHAM.TENLOAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.THUONGHIEU.TENTH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENCF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GIA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SOLUONG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ViewCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SLDABAN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KHOILUONG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.XUATXU)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HSD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DANGCF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MOTA)
                                    </td>
                                    <td>
                                        <a href="/Admin/ManageCoffees/edit/@item.MACF" class="btn btn-success">Chỉnh sửa</a>

                                        <input type="submit" value="Delete" class="btn btn-danger" />

                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                }
            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>

</section>

