@model IEnumerable<ChatCoffee.Models.ModelsDefault.VANCHUYEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Hình thức vận chuyển   </h3>

            <div class="card-tools">
                <a href="/admin/ManageDeliveries/Create" class="btn btn-success">Thêm mới</a>

            </div>

        </div>
        <div class="card-body">
            <table class="table table-bordered">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <thead>
                        <tr>

                            <th> Mã Vận Chuyển  </th>
                            <th> Vận Chuyển </th>
                            <th> Giá </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>

                                    <td> @item.MAVT </td>
                                    <td> @item.TENVT </td>
                                    <td> @item.GIA </td>
                                    <td>
                                        <a href="/admin/ManageDeliveries/edit/@item.MAVT" class="btn btn-success">Sửa</a>
                                        <a href="/admin/ManageDeliveries/delete/@item.MAVT" class="btn btn-danger">Xóa</a>


                                    </td>


                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                }

            </table>

        </div>
        <div class="card-footer">


        </div>

    </div>


</section>