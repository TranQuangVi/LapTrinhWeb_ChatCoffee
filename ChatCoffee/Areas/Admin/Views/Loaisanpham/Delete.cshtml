@model ChatCoffee.Models.ModelsDefault.LOAISANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i> </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Loaisanpham" class="nav-link">Danh sách loại</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Loaisanpham/Delete" class="nav-link">Xóa loại sản phẩm</a>
        </li>
    </ul>
}
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Xóa loại sản phẩm  </h3>


        </div>
        <div class="card-body">
            @using (Html.BeginForm("Delete", "Loaisanpham", FormMethod.Post))
            {

                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.TENLOAI)
                @Html.HiddenFor(x => x.MALOAI)


                <div class="form-group">
                    <label>Mã Loại sản phẩm</label>
                    @Html.TextBoxFor(x => x.TENLOAI, new { @class = "form-control" })
                    <label>Tên Loại sản phẩm</label>
                    @Html.TextBoxFor(x => x.MALOAI, new { @class = "form-control" })
                    <br />
                    <img src="@Model.ANH" id="pictureUpload" style="width:131px;height:117px; border-radius: 6px; " />

                </div>

                <div class="form-group">
                    @Html.ActionLink("Trở lại", "Index", "Loaisanpham", new { @class = "btn btn-primary" })
                    <input type="submit" value="Xóa" class="btn btn-default" />
                </div>
            }

        </div>
        <div class="card-footer">


        </div>

    </div>


</section>