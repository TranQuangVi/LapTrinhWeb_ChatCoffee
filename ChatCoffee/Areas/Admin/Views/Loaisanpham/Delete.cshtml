@model ChatCoffee.Models.ModelsDefault.LOAISANPHAM
 
 @{
     ViewBag.Title = "Delete";
     Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
     }
 

 <section class="content">
     
         <div class="card">
                 <div class="card-header">
                         <h3 class="card-title"> Xóa loại sản phẩm  </h3>
             
             
        </div>
                 <div class="card-body">
                         @using (Html.BeginForm("Delete", "Loaisanpham", FormMethod.Post))
                             {
                 
                 @Html.AntiForgeryToken()
                  @Html.HiddenFor(x => x.TENLOAI)
                  @Html.HiddenFor(x => x.MALOAI)
                 
                 
                             <div class="form-group">
                 <label>Mã Loại sản phẩm</label>
                 @Html.TextBoxFor(x => x.TENLOAI, new { @class = "form-control" })
                 <label>Tên Loại sản phẩm</label>
                 @Html.TextBoxFor(x => x.MALOAI, new { @class = "form-control" })
 
 
             </div >
 
                 <div class= "form-group" >
 @*<button type="submit" class="btn btn-success">Delete</button>*@
                     <input type = "submit" value = "Delete" class= "btn btn-default" />
                 </div >
             }
 
        </div>
                 <div class="card-footer">
             
             
        </div>
         
    </div>
     
     
</section>