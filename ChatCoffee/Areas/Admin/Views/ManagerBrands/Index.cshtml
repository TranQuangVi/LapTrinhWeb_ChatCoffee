@model IEnumerable<ChatCoffee.Models.ModelsDefault.THUONGHIEU>
@{
    ViewBag.Title = "Danh sách Quyền";
}


<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"> Thương hiệu   </h3>

            <div class="card-tools">
                <a href="/admin/ManagePayment/Create" class="btn btn-success">Thêm mới</a>

            </div>
        </div>
            <div class="card-body">
                <table class="table table-bordered">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên thương hiệu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.TENTH</td>
                                        <td>
                                            <a href="/admin/ManagerBrands/Edit/@item.MATH" class="btn btn-sm btn-success">Chỉnh sửa</a>
                                            <a href="/admin/ManagerBrands/Delete/@item.MATH" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                            @*<input type="submit" value="Delete" class="btn btn-danger" />*@
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    }
                </table>
            </div>
            <div class="card-footer">

            </div>
        </div>

</section>
